<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
<% if can? :read, Post %>
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.state %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
<% end %>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
